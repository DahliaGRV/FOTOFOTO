 <h1 class="uk-position-absolute" style="margin-left: 41%;" id="accountUsername"> Hiya, {{username}}!</h1>
<div>
   <a title="Logout" class="uk-position-absolute" href="/api/users/logout" id="accountLogoutBtn"  style="z-index:5; margin-top:2%; margin-left:3%; color:black" uk-icon="icon: sign-out; ratio: 4"></a>
      <a title="Home"class="uk-position-absolute" href="/homepage" id="accountHomeBtn" style="z-index:5; margin-top:1.70%; margin-left: 8%; color:black"uk-icon="icon: home; ratio: 4"></a>
</div>
<div class="uk-card uk-card-secondary uk-card-hover uk-card-body uk-position-center uk-light">
  <h3 class="uk-card-title">Account Information</h3>
  <form class="form change-form" id="updates">
    <div class="form-group">
      <label for="name-update"> Change Username:</label>
      <br />
      <input
        class="uk-input uk-form-width-large"
        type="text"
        id="changeUsername"
      />
      <button class="uk-button uk-button-default" id="usernameBtn" type="submit">submit changes</button>
    </div>
    <div class="form-group">
      <label for="email-signup">Change Email:</label>
      <br />
      <input
        class="uk-input uk-form-width-large"
        type="text"
        id="changeEmail"
      />
      <button class="uk-button uk-button-default" id="emailBtn" type="submit">submit changes</button>
    </div>
    <div class="form-group">
      <label for="password-signup">Change Password:</label>
      <br />
      <input
        class="uk-input uk-form-width-large"
        type="password"
        id="changePassword"
      />
      <button class="uk-button uk-button-default" id="passwordBtn" type="submit">submit changes</button>
    </div>
    <br />
    <div class="form-group">
    </div>
  </form>
</div>


