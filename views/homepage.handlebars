<link href="/Css/homepage.style.css" rel='stylesheet' type='text/css'>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://rawgithub.com/soulwire/sketch.js/master/js/sketch.min.js"></script>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet">

<a title="Logout" class="uk-position-absolute" href="/api/users/logout" id="HomepageLogoutBtn"
    style="z-index:5; margin-top:2%; margin-left:3%; color:black" uk-icon="icon: sign-out; ratio: 4"></a>
<div id="guideline">
    <header style="display: flex; justify-content: center">
        {{!-- <img src="/Assets/FotofotoLogo.jpg" width="150" height="150" alt="" id="logo"> --}}
        <h1 class="uk-heading uk-text-center" style="margin-top:3%;font-family: 'Kaushan Script'" id="userLogo">Welcome,
            {{username}}!</h1>
        {{!-- <img class="uk-comment-avatar src="" width="" height="" alt="" --}}
</header >

<br>
<br>
<hr class=" uk-divider-icon" id="dividerIcon">
        <br>

        <div class="uk-position-relative uk-visible-toggle uk-dark" tabindex="-1"
            uk-slider="clsActivated: uk-transition-active; center: true; autoplay: true; autoplay-interval: 2500">

            <ul class="uk-slider-items uk-grid uk-child-width-1">
                <li class="uk-width-3-4">
                    <div class="uk-panel">
                        <img class="uk-responsive-width" src="/Assets/uploadNew.png" width="500" height="150" alt="">
                        <div
                            class="uk-overlay uk-overlay-primary uk-position-bottom uk-text-center uk-transition-slide-bottom"style="border-radius:50px 50px 0px 0px; opacity: 75%;">
                            <h1><a class="uk-link-muted" style="font-weight:bold; color:white" id="upload_widget">Upload</a></h1>
                            <p class="uk-margin-remove" style="height:20px; font-weight:bold; color:white">Upload your edited images here!</p>
                        </div>
                    </div>
                </li>
                <li class="uk-width-3-4">
                    <div class="uk-panel">
                        <img class="uk-responsive-width" src="/Assets/photo-editor.png" width="500" height="150" alt="">
                        <div
                            class="uk-overlay uk-overlay-primary uk-position-bottom uk-text-center uk-transition-slide-bottom"style="border-radius:50px 50px 0px 0px; opacity: 75%;">
                            <h1><a class="uk-link-muted" style="font-weight:bold; color:white" href="editor/">Editor</a></h1>
                            <p class="uk-margin-remove" style="height:20px; font-weight:bold; color:white">Edit your photos here!</p>
                        </div>
                    </div>
                </li>
                <li class="uk-width-3-4">
                    <div class="uk-panel">
                        <img class="uk-responsive-width" src="/Assets/polaroid.png" width="500" height="150" alt="">
                        <div
                            class="uk-overlay uk-overlay-primary uk-position-bottom uk-text-center uk-transition-slide-bottom" style="border-radius:50px 50px 0px 0px; opacity: 75%;" >
                            <h1><a class="uk-link-muted" style="font-weight:bold; color:white" href="/library">Library</a></h1>
                            <p class="uk-margin-remove" style="height:20px; font-weight:bold; color:white">View your image library!</p>
                        </div>
                    </div>
                </li>
                <li class="uk-width-3-4">
                    <div class="uk-panel">
                        <img class="uk-responsive-width" src="/Assets/User.png" width="500" height="150" alt="">
                        <div
                            class="uk-overlay uk-overlay-primary uk-position-bottom uk-text-center uk-transition-slide-bottom" style="border-radius:50px 50px 0px 0px; opacity: 75%;">
                            <h1><a class="uk-link-muted" style="font-weight:bold; color:white"href="/account">Account</a></h1>
                            <p class="uk-margin-remove" style="height:20px; font-weight:bold; color:white">Update your user account!</p>
                        </div>
                    </div>
            </ul>

            <a class="uk-position-center-left uk-position-large" href="#" uk-slidenav-previous uk-width-large
                uk-slider-item="previous"></a>
            <a class="uk-position-center-right uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>

        </div>
        <hr class="uk-divider-icon">

        <!-- cloudinary upload widget -->
        <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript">
        </script>

        <!-- local upload instantiation -->
        <script src="/js/upload_widget.js" type="text/javascript">
        </script>
        <br>
        <br>
        <br>
        <br>
        <footer class="footer">
        </footer>
</div>

